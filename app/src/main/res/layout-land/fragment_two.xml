<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edgar.myfirsthomework.Activities.MainActivity">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp">
    </TimePicker>



    <Button
        android:id="@+id/start_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick1"
        android:layout_marginRight="350dp"
        android:text="@string/turn_on"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="46dp"
        android:layout_alignStart="@+id/end_alarm">
    </Button>
    <Button
        android:id="@+id/end_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:onClick="onClick2"
        android:text="@string/turn_off"
        android:layout_below="@+id/start_alarm"
        android:layout_toEndOf="@+id/timePicker">
    </Button>


</RelativeLayout>